@model AnimePlace.Models.InputModels.CreateAnimeInputModel

@{
    ViewData["Title"] = "Add new Anime";
}

<h1>Add new Anime to the Database</h1>

<h4>Please fill all of the blanks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sypnosis" class="control-label"></label>
                <input asp-for="Sypnosis" class="form-control" />
                <span asp-validation-for="Sypnosis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Episodes" class="control-label"></label>
                <input asp-for="Episodes" class="form-control" />
                <span asp-validation-for="Episodes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control"> </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Go back to the list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
