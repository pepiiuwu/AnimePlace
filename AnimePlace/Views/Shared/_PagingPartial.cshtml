@using AnimePlace.Models.ViewModels
@model PagingViewModel

<nav aria-label="...">
  <ul class="pagination justify-content-center">
    <li class="page-item @if(!Model.HasPreviousPage) { <text>disabled</text> }">
      <a class="page-link" asp-action="AllAnimes" asp-route-id="@Model.PreviousPageNumber" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    @for(int i = Model.PageNumber - 4; i < Model.PageNumber; i++)
        {
            if(i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="AllAnimes" asp-route-id="@i">@i</a></li>
            }
        }
    <li class="page-item disabled"><a class="page-link" href="#">
        @Model.PageNumber
    </a>
    </li>
        @for(int i = Model.PageNumber + 1; i <= Model.PagesCount + 4; i++)
        {
            if(i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="AllAnimes" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if(!Model.HasNextPage) { <text>disabled</text> }">
      <a class="page-link" asp-action="AllAnimes" asp-route-id="@Model.NextPageNumber" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>