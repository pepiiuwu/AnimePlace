@using AnimePlace.Models.InputModels
@model CreateAnimeInputModel

@{
    ViewData["Title"] = "Add new Anime";
    
}

<h1>Add new Anime to the Database</h1>

<h4>Please fill all of the blanks</h4>

<form method="post">
    <div class="border p-3 mt-4 px-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Anime</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Episodes"></label>
            <input asp-for="Episodes" class="form-control" />
            <span asp-validation-for="Episodes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Sypnosis"></label>
            <input asp-for="Sypnosis" class="form-control" />
            <span asp-validation-for="Sypnosis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" 
                    class="form-control" 
                    asp-items="Html.GetEnumSelectList<TypeEnum>()">
                <option>Select type...</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Animes" asp-action="Index" class="btn btn-secondary" style = "width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
