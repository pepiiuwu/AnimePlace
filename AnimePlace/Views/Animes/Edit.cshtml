        </div>
        <div class="mb-3">
            <label asp-for="Sypnosis"></label>
            <input asp-for="Sypnosis" class="form-control" />
            <span asp-validation-for="Sypnosis" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Aired"></label>
            <input asp-for="Aired" class="form-control" />
            <span asp-validation-for="Aired" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Source"></label>
            <input asp-for="Source" class="form-control" />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BorderImageUrl"></label>
            <input asp-for="BorderImageUrl" class="form-control" />
            <span asp-validation-for="BorderImageUrl" class="text-danger"></span>
        </div>
